<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
         <record id="approval_category_data_budget" model="approval.category">
            <field name="name">Budget Approval</field>
            <field name="image" type="base64" file="sme_approvals_approval/static/src/img/dollar-sign-solid.svg"/>
            <field name="sequence">80</field>
            <field name="has_date">no</field>
            <field name="has_period">no</field>
            <field name="has_item">no</field>
            <field name="has_quantity">no</field>
            <field name="has_amount">required</field>
            <field name="has_reference">no</field>
            <field name="has_partner">no</field>
            <field name="has_payment_method">no</field>
            <field name="has_location">no</field>
            <field name="has_priority">required</field>
            <field name="has_analytic_account">required</field>
            <field name="requirer_document">optional</field>
            <field name="approval_minimum">1</field>
            <field name="is_manager_approver">False</field>
        </record>
        <template id="approval_template_refuse_reason">
            <p>Your approval request <t t-esc="name"/> <span t-if="ref"> (Ref- <t t-esc="ref"/>) </span> has been refused</p>
            <ul class="o_timeline_tracking_value_list">
                <li>Reason : <t t-esc="reason"/></li>
            </ul>
        </template>
<!--        <template id="approval_request_template_approve">-->
<!--            <p>Your approval request <t t-esc="name"/> <span t-if="ref"> (Ref- <t t-esc="ref"/>) </span> has been approved</p>-->
<!--        </template>-->

    </data>
</odoo>

