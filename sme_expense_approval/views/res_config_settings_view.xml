<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_expense_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.approval.expense</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
         <field name="arch" type="xml">
               <xpath expr="//div[@data-key='hr_expense']/div" position="inside">
                      <div class="col-12 col-lg-6 o_setting_box" id="expense_individual_approval">
                            <div class="o_setting_left_pane">
                                   <field name="expense_individual_approval"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="expense_individual_approval"/>
                                <div class="text-muted">
                                    Request approvers by individual to approve expense
                                </div>
                            </div>
                        </div>

               </xpath>
         </field>
    </record>
</odoo>