<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_approval_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.approval.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
         <field name="arch" type="xml">
                 <div name="purchase_setting_container" position="inside">
                      <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                   <field name="po_individual_approval"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="po_individual_approval"/>
                                <div class="text-muted">
                                    Request approvers by individual to approve orders
                                </div>
                            </div>
                        </div>
                 </div>
         </field>
    </record>
</odoo>