<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_approval_payment" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.approval.payment</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
         <field name="arch" type="xml">
             <div id="account_vendor_bills" position="inside">
                  <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                               <field name="vendor_payment_individual_approval"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="vendor_payment_individual_approval"/>
                            <div class="text-muted">
                                Request approvers by individual to approve vendor payment
                            </div>
                        </div>
                    </div>
              </div>
         </field>
    </record>
</odoo>